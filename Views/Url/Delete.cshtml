@model UrlModel

<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete URL</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="OriginUrl"></label>
			<input asp-for="OriginUrl" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="ShortUrl"></label>
			<input asp-for="ShortUrl" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="CreatedBy"></label>
			<input asp-for="CreatedBy" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="DateOfCreation"></label>
			<input asp-for="DateOfCreation" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete record</button>
		<a asp-controller="Url" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>
