@model IEnumerable<UrlModel>
@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Table</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Url" asp-action="Add" style="text-decoration:none">Add URL</a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Original Url
                </th>
                <th>
                    Short Url
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td style="width:40%; overflow:hidden; white-space:nowrap; text-overflow:ellipsis">
                        <a href="@obj.OriginUrl" style="text-decoration:none">@obj.OriginUrl.Substring(0, 70)...</a>
                    </td>
                    <td>
                        <a href="@obj.OriginUrl" style="text-decoration:none">@obj.ShortUrl</a>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Url" asp-action="Info" asp-route-id="@obj.Id"
                           class="btn btn-secondary mx-2">Info</a>
                            <a asp-controller="Url" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
