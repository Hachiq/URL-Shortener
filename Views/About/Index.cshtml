@model TextModel
@{
    ViewData["Title"] = "About";
}

<div class="row">
    <div class="col-6 pb-3">
        <h2>@Model.Title</h2>
    </div>
    <div class="col-3 pt-4 text-end">
        <p>Last time edited: @Model.LastEdited</p>
    </div>
</div>
<form asp-action="Edit" method="post">
    <textarea asp-for="Text" style="width:75%; height:min-content; min-height:100px; border:none"></textarea>
    <br />
    <button type="submit">Submit</button>
    <a asp-controller="Url" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back to table
    </a>
</form>
